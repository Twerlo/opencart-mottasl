{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="float-end">
				<button type="submit" form="form-module" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa-solid fa-save"></i></button>
				<a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fa-solid fa-reply"></i></a></div>
			<h1>{{ heading_title }}</h1>
			<ol class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
					<li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ol>
		</div>
	</div>
	<div class="container-fluid">
		<div class="card">
			<div class="card-header"><i class="fa-solid fa-pencil"></i> {{ text_edit }}</div>
			<div class="card-body">
				<form id="form-module" action="{{ save }}" method="post" data-oc-toggle="ajax">
					<div class="row mb-3">
						<div class="col-sm-2"></div>
						<div class="col-sm-10">
							<div>*{{ templates_note }}</div>
						</div>
					</div>
					<div class="row mb-3">
            <label for="input-api_key" class="col-sm-2 col-form-label">{{ entry_api_key }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_mottasl_api_key" value="{{ api_key }}" placeholder="{{ entry_api_key }}" id="input-api_key" class="form-control"/>
              <div id="error-api_key" class="invalid-feedback"></div>
            </div>
          </div>
					<div class="row mb-3">
            <label for="input-template_id" class="col-sm-2 col-form-label">{{ entry_template_id }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_mottasl_template_id" value="{{ template_id }}" placeholder="{{ entry_template_id }}" id="input-template_id" class="form-control"/>
              <div id="error-template_id" class="invalid-feedback"></div>
            </div>
          </div>
					<div class="row mb-3">
            <label for="input-template_lang" class="col-sm-2 col-form-label">{{ entry_template_lang }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_mottasl_template_lang" value="{{ template_lang }}" placeholder="{{ entry_template_lang }}" id="input-template_lang" class="form-control"/>
              <div id="error-template_lang" class="invalid-feedback"></div>
            </div>
          </div>
				</form>
			</div>
		</div>
	</div>
</div>
{{ footer }}